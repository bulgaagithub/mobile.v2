<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:gravity="center"
    tools:context="com.example.erdenebulgans.soh_appuser.MainActivity">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_lock_outline_black_24dp" />

        <EditText
            android:id="@+id/et_usercode"
            android:background="#E5E5E5"
            android:padding="10dp"
            android:hint="Хэрэглэгчийн код"
            android:inputType="text"
            android:textColor="#000"
            android:maxLength="12"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/et_password"
            android:background="#E5E5E5"
            android:padding="10dp"
            android:hint="Нууц үг"
            android:inputType="textPassword"
            android:textColor="#000"
            android:maxLength="12"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/lg_btn"
            android:text="Нэвтрэх"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#007AFF"
            android:onClick="onClick"
            android:layout_gravity="center"/>

    <Button
        android:id="@+id/link_btn"
        android:text="БҮРТГҮҮЛЭХ"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#449D44"
        android:onClick="onClick" />

</LinearLayout>
