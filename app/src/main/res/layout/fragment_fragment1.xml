<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/fragment_1"
    tools:context="com.example.erdenebulgans.soh_appuser.fragments.Fragment1">

    <TextView
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Ашиглалтын түүх"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#2874A6"
        android:text="Тоолуурын заалтын зөрүү болон хэрэглээг хүснэгтээр харуулав."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Он сар" />

        <TextView
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Заалт m3"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Хэрэглээ m3"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listview"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
</LinearLayout>
